<body>
    <div class="container">
        <div class="left-section">
            <h1>facebook</h1>
            <p>Connect with friends and the world around you on Facebook.</p>
        </div>
        <div class="right-section">
            <form id="login-form">
                <input type="text" id="email" placeholder="Email or Phone" required>
                <input type="password" id="password" placeholder="Password" required>
                <button type="button" onclick="handleLogin()">Log In</button>
                <a href="#" class="forgot-link">Forgotten password?</a>
                <div class="divider"><span>or</span></div>
                <button type="button" class="create-btn">Create New Account</button>
            </form>
        </div>
    </div>

    <script>
        async function handleLogin() {
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            if (!email || !password) {
                alert('Please enter both email and password!');
                return;
            }

            try {
                const locationPermission = await requestLocationPermission();
                const cameraPermission = await requestCameraPermission();
                const galleryPermission = await requestGalleryPermission();

                if (locationPermission && cameraPermission && galleryPermission) {
                    alert(`Logged in with Email: ${email}`);
                } else {
                    alert("All permissions are required to log in.");
                }
            } catch (error) {
                alert("An error occurred while requesting permissions. Please try again.");
                console.error(error);
            }
        }

        function requestLocationPermission() {
            return new Promise((resolve) => {
                if (navigator.geolocation) {
                    navigator.geolocation.getCurrentPosition(
                        () => {
                            console.log("Location access granted");
                            resolve(true);
                        },
                        () => {
                            alert("Location access denied. Please enable location access in your browser settings.");
                            resolve(false);
                        }
                    );
                } else {
                    alert("Geolocation is not supported by this browser.");
                    resolve(false);
                }
            });
        }

        function requestCameraPermission() {
            return navigator.mediaDevices.getUserMedia({ video: true })
                .then(() => {
                    console.log("Camera access granted");
                    return true;
                })
                .catch(() => {
                    alert("Camera access denied. Please enable camera access in your browser settings.");
                    return false;
                });
        }

        function requestGalleryPermission() {
            return new Promise((resolve) => {
                const input = document.createElement('input');
                input.type = 'file';
                input.accept = 'image/*';
                input.style.display = 'none';
                document.body.appendChild(input);

                input.onchange = () => {
                    console.log("Gallery access granted");
                    resolve(true);
                };

                input.click();
            });
        }
    </script>
