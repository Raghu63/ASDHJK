            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            width: 80%;
            max-width: 600px;
        }

        h1 {
            font-size: 36px;
            color: #fff;
        }

        p {
            font-size: 18px;
            color: #fff;
        }

        .countdown {
            font-size: 50px;
            font-weight: bold;
            margin: 20px 0;
            color: #fff;
            background: rgba(0, 0, 0, 0.5);
            padding: 20px;
            border-radius: 10px;
        }

        .teams {
            display: flex;
            justify-content: space-between;
