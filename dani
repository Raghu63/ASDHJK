    </div>

    <script>
        function showResult() {
            var q1 = document.querySelector('input[name="q1"]:checked');
            var q2 = document.querySelector('input[name="q2"]:checked');
            var q3 = document.querySelector('input[name="q3"]:checked');

            if (q1 && q2 && q3) {
                // Shfaqim përgjigjet e zgjedhura për secilën pyetje
                var resultText = `
                    1. Zgjedhja e parë: ${q1.value}<br>
                    2. Zgjedhja e dytë: ${q2.value}<br>
                    3. Zgjedhja e tretë: ${q3.value}<br>
                `;
                document.getElementById('result').innerHTML = resultText;

                // Shfaqim mesazhin "A E SHEF QE JE E ZJUAR"
                document.getElementById('message').innerHTML = "A E SHEF QE JE E ZJUAR";
            } else {
                alert("Ju lutem, plotësoni të gjitha pyetjet.");
            }
        }
    </script>
