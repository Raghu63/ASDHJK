    <script>
        function nextStep(stepId) {
            // Hide all steps
            const steps = document.querySelectorAll('.container > div');
            steps.forEach(step => step.classList.add('hidden'));

            // Show the selected step
            document.getElementById(stepId).classList.remove('hidden');
        }
    </script>
